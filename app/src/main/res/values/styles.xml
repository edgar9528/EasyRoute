<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonDark" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonRed" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorRedDark</item>
        <item name="colorControlHighlight">@color/colorRedLight</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="EditTextWhite" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/bgDefault</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorPrimary">@color/bgDefault</item>
        <item name="colorAccent">@color/bgDefault</item>
        <item name="colorControlNormal">@color/bgDefault</item>
        <item name="colorControlActivated">@color/bgDefault</item>
    </style>

    <style name="EditTextBlack" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlActivated">@android:color/black</item>
    </style>

    <style name="tv_titulos" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/titulos_grey</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="tv_titulos.tv_mensajes">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_titulos.normal">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DialogAnimations.SmileWindow">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_top</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="estiloImprimir" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/titulos_grey</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>
