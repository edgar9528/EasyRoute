<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ventanas.Configuracion.UtilidadFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/paddingGeneral"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:paddingBottom="@dimen/paddingControles"
                >

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:theme="@style/EditTextBlack">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_folio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_folio"
                        android:singleLine="true"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/button_ver"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/bt_ver"
                    android:theme="@style/RaisedButtonDark"
                    android:tag="deselec"
                    android:layout_gravity="center"
                    />

            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextBlack">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_pagos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_pagos"
                    android:singleLine="true"
                    />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextBlack">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_credito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_credito"
                    android:singleLine="true"
                    />
            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="8"
                android:paddingTop="@dimen/paddingControles"
                >

                <Button
                    android:id="@+id/button_realizar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/bt_realizar"
                    android:theme="@style/ButtonDarkSmall"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/button_radia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/bt_reacdia"
                    android:theme="@style/ButtonDarkSmall"
                    tools:ignore="ButtonStyle"
                    />

                <Button
                    android:id="@+id/button_preventa"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/hint_preventa"
                    android:theme="@style/ButtonDarkSmall"
                    tools:ignore="ButtonStyle"
                    />

                <Button
                    android:id="@+id/button_venta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/bt_venta"
                    android:theme="@style/ButtonDarkSmall"
                    tools:ignore="ButtonStyle"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="8"
                android:paddingTop="@dimen/paddingControles"
                >

                <Button
                    android:id="@+id/button_rapedido"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/bt_reacped"
                    android:theme="@style/ButtonDarkSmall"
                    tools:ignore="ButtonStyle"
                    />

                <Button
                    android:id="@+id/button_aauditoria"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/bt_actaudi"
                    android:theme="@style/ButtonDarkSmall"
                    tools:ignore="ButtonStyle"
                    />

                <Button
                    android:id="@+id/button_dauditoria"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/bt_desaudi"
                    android:theme="@style/ButtonDarkSmall"
                    tools:ignore="ButtonStyle"
                    />

                <Button
                    android:id="@+id/button_salir"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/bt_salir"
                    android:theme="@style/ButtonDarkSmall"
                    tools:ignore="ButtonStyle"
                    />

            </LinearLayout>




        </LinearLayout>

    </ScrollView>


</FrameLayout>