<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout13"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ventanas.Reportes.ArqueoFragment">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_salir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="@dimen/paddingGeneral"
        android:layout_marginStart="@dimen/paddingGeneral"
        android:layout_marginEnd="@dimen/paddingGeneral"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/t1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_ventasDia"
                android:textSize="@dimen/titulosArqueo"
                style="@style/tv_titulos.tv_mensajes"
                >
            </TextView>

            <TextView
                android:id="@+id/et1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_ventasDia"
                android:textSize="@dimen/titulosArqueo"
                android:paddingStart="@dimen/paddingImprimir"
                android:paddingEnd="@dimen/paddingImprimir"
                style="@style/tv_titulos"
                android:textAlignment="textEnd"
                >
            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginTop="@dimen/paddingHeader"
                android:layout_marginBottom="@dimen/paddingHeader"
            />


            <TextView
                android:id="@+id/t2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hint_ventasContado"
                android:textSize="@dimen/titulosArqueo"
            style="@style/tv_titulos.tv_mensajes"
            >
        </TextView>

            <TextView
                android:id="@+id/et2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_ventasDia"
                android:textSize="@dimen/titulosArqueo"
                android:paddingStart="@dimen/paddingImprimir"
                android:paddingEnd="@dimen/paddingImprimir"
                style="@style/tv_titulos"
                android:textAlignment="textEnd"
                >
            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginTop="@dimen/paddingHeader"
                android:layout_marginBottom="@dimen/paddingHeader"
                />



            <TextView
                android:id="@+id/t3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_ventasCredito"
                android:textSize="@dimen/titulosArqueo"
                style="@style/tv_titulos.tv_mensajes"
                >
            </TextView>

            <TextView
                android:id="@+id/et3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_ventasDia"
                android:textSize="@dimen/titulosArqueo"
                android:paddingStart="@dimen/paddingImprimir"
                android:paddingEnd="@dimen/paddingImprimir"
                style="@style/tv_titulos"
                android:textAlignment="textEnd"
                >
            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginTop="@dimen/paddingHeader"
                android:layout_marginBottom="@dimen/paddingHeader"
                />


            <TextView
                android:id="@+id/t4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_cobranza"
                android:textSize="@dimen/titulosArqueo"
                style="@style/tv_titulos.tv_mensajes"
                >
            </TextView>

            <TextView
                android:id="@+id/et4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_ventasDia"
                android:textSize="@dimen/titulosArqueo"
                android:paddingStart="@dimen/paddingImprimir"
                android:paddingEnd="@dimen/paddingImprimir"
                style="@style/tv_titulos"
                android:textAlignment="textEnd"
                >
            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginTop="@dimen/paddingHeader"
                android:layout_marginBottom="@dimen/paddingHeader"
                />


            <TextView
                android:id="@+id/t5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_ventasEntregar"
                android:textSize="@dimen/titulosArqueo"
                style="@style/tv_titulos.tv_mensajes"
                >
            </TextView>

            <TextView
                android:id="@+id/et5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_ventasDia"
                android:textSize="@dimen/titulosArqueo"
                android:paddingStart="@dimen/paddingImprimir"
                android:paddingEnd="@dimen/paddingImprimir"
                android:textAlignment="textEnd"
                style="@style/tv_titulos"
                >
            </TextView>

        </LinearLayout>

    </ScrollView>


    <Button
        android:id="@+id/button_salir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/bt_salir"
        android:theme="@style/ButtonDark"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_imprimir"
        android:layout_marginStart="@dimen/paddingGeneral"
        android:layout_marginBottom="@dimen/paddingGeneral"
        />

    <Button
        android:id="@+id/button_imprimir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/bt_imprimir"
        android:theme="@style/ButtonDark"

        app:layout_constraintBaseline_toBaselineOf="@id/button_salir"
        app:layout_constraintStart_toEndOf="@id/button_salir"
        app:layout_constraintEnd_toEndOf="parent"

        />



</androidx.constraintlayout.widget.ConstraintLayout>