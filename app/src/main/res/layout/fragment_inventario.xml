<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Inventario.InventarioFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/paddingGeneral"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">







                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:paddingBottom="@dimen/paddingControles"
                    android:paddingTop="@dimen/paddingControles"
                    >

                    <Button
                        android:id="@+id/button_salir"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="Salir"
                        android:theme="@style/RaisedButtonDark"
                        android:tag="deselec"
                        />

                    <Button
                        android:id="@+id/button_finalizar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="Aplicar"
                        android:theme="@style/RaisedButtonDark"
                        />

                </LinearLayout>


            </LinearLayout>



        </ScrollView>
    </LinearLayout>

</FrameLayout>