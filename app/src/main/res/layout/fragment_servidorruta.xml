<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ventanas.Configuracion.ServidorrutaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/paddingGeneral"
        android:orientation="vertical"
        >



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/EditTextBlack">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_servidor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DirecciÃ³n del servidor" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/EditTextBlack">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_timeout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:digits="0123456789"
                android:hint="TimeOut(ms)" />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/button_pruebaWs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prueba webService"
            android:theme="@style/RaisedButtonDark"
            android:paddingTop="@dimen/paddingControles"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/paddingControles"
            android:layout_marginBottom="@dimen/paddingControles"
            android:background="@color/grey" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar ruta"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPrimaryDark"
            android:paddingBottom="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:paddingTop="10dp"
            >

            <Spinner
                android:id="@+id/spinner_ruta"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                >
            </Spinner>

            <Button
                android:id="@+id/button_listar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Listar"
                android:theme="@style/RaisedButtonDark"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:paddingTop="10dp"
            >

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextBlack">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_comImpresora"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Puerto de impresora" />
            </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/button_pruebaImp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:text="Prueba"
                android:theme="@style/RaisedButtonDark"
                />
        </LinearLayout>







        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:paddingTop="10dp"
            >

            <Button
                android:id="@+id/button_regresar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Salir"
                android:theme="@style/RaisedButtonDark"
                />

            <Button
                android:id="@+id/button_guardar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Guardar"
                android:theme="@style/RaisedButtonDark"
                />

        </LinearLayout>




    </LinearLayout>
    </ScrollView>

</FrameLayout>