<TableRow
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/t_cliente"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="@string/table_cliente"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        />

    <TextView
        android:id="@+id/t_negocio"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="@string/table_negocio"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        />

    <TextView
        android:id="@+id/t_saldo"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="@string/table_saldo"
        android:textAlignment="textEnd"
        android:paddingStart="0dp"
        android:paddingEnd="10dp"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        />

    <TextView
        android:id="@+id/t_razon"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="@string/table_razon"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        />

</TableRow>