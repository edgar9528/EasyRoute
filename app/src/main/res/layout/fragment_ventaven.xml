<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout24"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ventanas.Ventas.Venta.VentavenFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ventasRecycler"

        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linearLayout2"
        android:layout_marginTop="@dimen/paddingGeneral"
        android:layout_marginStart="@dimen/paddingGeneral"
        android:layout_marginEnd="@dimen/paddingGeneral"
        >

    </androidx.recyclerview.widget.RecyclerView>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:orientation="horizontal"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginStart="@dimen/paddingGeneral"
        android:layout_marginEnd="@dimen/paddingGeneral"
        android:layout_marginBottom="@dimen/paddingGeneral"
        >

        <Button
            android:id="@+id/button_descuento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/bt_descuento"
            android:textAlignment="center"
            android:theme="@style/ButtonDark"
            android:layout_gravity="center"
            />



        <TextView
            android:id="@+id/tv_subTotal21"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/bt_venta"
            android:layout_weight="3"
            style="@style/tv_titulos"

            android:layout_gravity="center"
            >
        </TextView>

        <TextView
            android:id="@+id/tv_subTotal2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_ejemplo"
            android:textAlignment="textEnd"
            android:layout_weight="3"
            style="@style/tv_titulos.tv_mensajes"
            android:layout_gravity="center"
            tools:ignore="RtlCompat">
        </TextView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>