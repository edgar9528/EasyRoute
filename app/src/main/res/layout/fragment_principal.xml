<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.PrincipalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/paddingGeneral"
        android:background="@drawable/fondo"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/paddingGeneral"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usuario:"
                android:textSize="18sp"
                android:textColor="@color/blanco"
                >
            </TextView>

            <TextView
                android:id="@+id/tv_iniUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre persona"
                android:textSize="20sp"
                android:textColor="@color/blanco"
                >
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ruta:"
                android:textSize="18sp"
                android:textColor="@color/blanco"
                >
            </TextView>
            <TextView
                android:id="@+id/tv_iniRuta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre persona"
                android:textSize="20sp"
                android:textColor="@color/blanco"
                >
            </TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha:"
                android:textSize="18sp"
                android:textColor="@color/blanco"
                >
            </TextView>
            <TextView
                android:id="@+id/tv_iniFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre persona"
                android:textSize="20sp"
                android:textColor="@color/blanco"
                >
            </TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora:"
                android:textSize="18sp"
                android:textColor="@color/blanco"
                >
            </TextView>
            <TextView
                android:id="@+id/tv_iniHora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre persona"
                android:textSize="20sp"
                android:textColor="@color/blanco"
                >
            </TextView>

        </LinearLayout>





    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/intrucciones">

    </ImageView>

    </LinearLayout>







</FrameLayout>