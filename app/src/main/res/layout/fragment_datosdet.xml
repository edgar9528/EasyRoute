<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout19"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ventanas.Pedidos.DetallesCliente.DatosdetFragment">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_salir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="@dimen/paddingGeneral"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/paddingGeneral"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextBlack">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_codigo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_codigo"
                    android:singleLine="true"
                    android:enabled="false"
                    android:focusable="false"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextBlack">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_razon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/table_razon"
                    android:enabled="false"
                    android:focusable="false"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextBlack">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_negocio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/table_negocio"
                    android:enabled="false"
                    android:focusable="false"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextBlack">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_rfc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_rfc"
                    android:singleLine="true"
                    android:enabled="false"
                    android:focusable="false"
                    />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextBlack">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_limite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_limCredito"
                    android:singleLine="true"
                    android:enabled="false"
                    android:focusable="false"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:paddingTop="@dimen/paddingControles"
                >

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:theme="@style/EditTextBlack">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_plazo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_plazo"
                        android:singleLine="true"
                        android:enabled="false"
                        android:focusable="false"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:theme="@style/EditTextBlack">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_envases"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_envases"
                        android:singleLine="true"
                        android:enabled="false"
                        android:focusable="false"
                        />
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tv_estadoCredi"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:paddingTop="@dimen/paddingControles"
                >
            </TextView>

            <Spinner
                android:id="@+id/spinnerEstadoCred"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:clickable="false"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextBlack">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_coordenada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/tv_coordenada"
                    android:singleLine="true"
                    android:enabled="false"
                    android:focusable="false"
                    />
            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:paddingTop="@dimen/paddingControles"
                >

                <RadioButton
                    android:id="@+id/rb_reqfact"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_reqfac"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:clickable="false"
                    >
                </RadioButton>

                <RadioButton
                    android:id="@+id/rb_prospectp"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_prospecto"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:clickable="false"
                    >
                </RadioButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:paddingTop="@dimen/paddingControles"
                >

                <RadioButton
                    android:id="@+id/rb_fba"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_fba"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:clickable="false"
                    >
                </RadioButton>

                <RadioButton
                    android:id="@+id/rb_comodato"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_comoDato"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:clickable="false"
                    >
                </RadioButton>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



    <Button
        android:id="@+id/button_salir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/bt_salir"
        android:theme="@style/ButtonDarkSmall"

        android:layout_marginStart="@dimen/paddingGeneral"
        android:layout_marginBottom="@dimen/paddingGeneral"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_ruta"

        />


    <Button
        android:id="@+id/button_ruta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/hint_ruta"
        android:theme="@style/ButtonDarkSmall"

        app:layout_constraintBaseline_toBaselineOf="@+id/button_salir"
        app:layout_constraintStart_toEndOf="@+id/button_salir"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginEnd="@dimen/paddingGeneral"
        />


</androidx.constraintlayout.widget.ConstraintLayout>