<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout19"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ventanas.Pedidos.DetallesCliente.DatosdetFragment">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_salir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="@dimen/paddingGeneral"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/paddingGeneral"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_codigo"
                    style="@style/tv_titulos"
                    android:layout_weight="1"
                    >
                </TextView>

                <TextView
                    android:id="@+id/tv_codigo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_ejemplo"
                    style="@style/tv_titulos.tv_mensajes"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    >
                </TextView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor"
                android:layout_marginTop="@dimen/paddingControles"
                android:layout_marginBottom="@dimen/paddingControles" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/table_razon"
                    style="@style/tv_titulos"
                    android:layout_weight="1"
                    >
                </TextView>

                <TextView
                    android:id="@+id/tv_razon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_ejemplo"
                    style="@style/tv_titulos.tv_mensajes"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    >
                </TextView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor"
                android:layout_marginTop="@dimen/paddingControles"
                android:layout_marginBottom="@dimen/paddingControles" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/table_negocio"
                    style="@style/tv_titulos"
                    android:layout_weight="1"
                    >
                </TextView>

                <TextView
                    android:id="@+id/tv_negocio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_ejemplo"
                    style="@style/tv_titulos.tv_mensajes"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    >
                </TextView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor"
                android:layout_marginTop="@dimen/paddingControles"
                android:layout_marginBottom="@dimen/paddingControles" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_rfc"
                    style="@style/tv_titulos"
                    android:layout_weight="1"
                    >
                </TextView>

                <TextView
                    android:id="@+id/tv_rfc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_ejemplo"
                    style="@style/tv_titulos.tv_mensajes"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    >
                </TextView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor"
                android:layout_marginTop="@dimen/paddingControles"
                android:layout_marginBottom="@dimen/paddingControles" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_limCredito"
                    style="@style/tv_titulos"
                    android:layout_weight="1"
                    >
                </TextView>

                <TextView
                    android:id="@+id/tv_limCred"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_ejemplo"
                    style="@style/tv_titulos.tv_mensajes"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    >
                </TextView>

            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor"
                android:layout_marginTop="@dimen/paddingControles"
                android:layout_marginBottom="@dimen/paddingControles" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_plazo"
                    style="@style/tv_titulos"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_plazo"
                    style="@style/tv_titulos.tv_mensajes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/tv_ejemplo"
                    android:textAlignment="textEnd"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor"
                android:layout_marginTop="@dimen/paddingControles"
                android:layout_marginBottom="@dimen/paddingControles" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_envases"
                    style="@style/tv_titulos"
                    android:layout_weight="1"
                    >
                </TextView>

                <TextView
                    android:id="@+id/tv_envases"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_ejemplo"
                    style="@style/tv_titulos.tv_mensajes"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    >
                </TextView>

            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor"
                android:layout_marginTop="@dimen/paddingControles"
                android:layout_marginBottom="@dimen/paddingControles" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tv_estadoCredi"
                style="@style/tv_titulos"
                >
            </TextView>

            <Spinner
                android:id="@+id/spinnerEstadoCred"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:clickable="false"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor"
                android:layout_marginTop="@dimen/paddingControles"
                android:layout_marginBottom="@dimen/paddingControles" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_coordenada"
                    style="@style/tv_titulos"
                    android:layout_weight="1"
                    >
                </TextView>

                <TextView
                    android:id="@+id/tv_coordenada"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_ejemplo"
                    style="@style/tv_titulos.tv_mensajes"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    >
                </TextView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor"
                android:layout_marginTop="@dimen/paddingControles"
                android:layout_marginBottom="@dimen/paddingControles" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:paddingTop="@dimen/paddingControles"
                >

                <RadioButton
                    android:id="@+id/rb_reqfact"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_reqfac"
                    style="@style/tv_titulos"
                    android:clickable="false"
                    >
                </RadioButton>

                <RadioButton
                    android:id="@+id/rb_prospectp"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_prospecto"
                    style="@style/tv_titulos"
                    android:clickable="false"
                    >
                </RadioButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:paddingTop="@dimen/paddingControles"
                >

                <RadioButton
                    android:id="@+id/rb_fba"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_fba"
                    style="@style/tv_titulos"
                    android:clickable="false"
                    >
                </RadioButton>

                <RadioButton
                    android:id="@+id/rb_comodato"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_comoDato"
                    style="@style/tv_titulos"
                    android:clickable="false"
                    >
                </RadioButton>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



    <Button
        android:id="@+id/button_salir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/bt_salir"
        android:theme="@style/ButtonDark"

        android:layout_marginStart="@dimen/paddingGeneral"
        android:layout_marginBottom="@dimen/paddingGeneral"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_ruta"

        />


    <Button
        android:id="@+id/button_ruta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/hint_ruta"
        android:theme="@style/ButtonDark"

        app:layout_constraintBaseline_toBaselineOf="@+id/button_salir"
        app:layout_constraintStart_toEndOf="@+id/button_salir"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginEnd="@dimen/paddingGeneral"
        />


</androidx.constraintlayout.widget.ConstraintLayout>